<%= content_for :meta do %>
  <meta property="og:title" content="<%=@article.title %>."/>
  <meta property="og:type" content="non_profit"/>
  <meta property="og:image" content="<%="http://www.studentpeaceprize.org/images/spp_article_images/"+@article.id.to_s + "_3.jpg"%>"/>
  <meta property="og:url" content="<%=(request.url).match(/([A-Za-z0-9:._\/]+)/)[1]%>"/>          
  <meta property="og:site_name" content="Student Peace Prize"/>
  <meta property="fb:app_id" content="132392463483362"/>
  <meta property="og:description" content="<%=@article.ingress%>"/>
<%end%>

<%= content_for :title do %>
  <%= @article.title + " -" %>
<% end %>

<div id="article-media">
  <%if @article.youtube_link? %>
    <%= youtube_movie @article.youtube_link, :show_youtube %>
  <%else%>
    <%= image_tag @article.spp_article_image.url(:front_large) %>
  <%end%>
</div>

<div id="article-header">
  <div class="fb-like pull-right" data-href="<%= request.url %>" data-send="false" data-layout="box_count" data-width="45" data-show-faces="false"></div>
  <h1><%= @article.title %></h1>
  <p><%= @article.ingress %></p>
</div>
<div id="article-metadata">
  <span class="byline">
    <em><%= t('.text') %>:</em> <%= @article.byline %>
    <em><%= t('.photo') %>:</em> <%= @article.image_text %>
    <em><%= t('.date') %>:</em> <%= @article.created_at.strftime("%F") %>
  </span>
</div>
<div id="article-body">
<%=raw format(@article.body)%>
</div>
<%if @article.got_comments %>
  <div class="fb-comments" data-href="<%=request.url %>" data-num-posts="5" data-width="620"></div>
<%end%>
