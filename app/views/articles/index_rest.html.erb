<% @articles.first(24).each do |article| %>
  <% if @grid4_counter == 0%>
    <div class="grid_4 art alpha">
  <%elsif @grid4_counter == 1%>
    <div class="grid_4 art">
  <%else%>
    <div class="grid_4 art omega">
  <%end%>
    <%  
      @grid4_counter += 1
      @grid4_counter %= 3
    %>
    <%= render article, image_size: :front_small %>
  </div>
<%end%>
