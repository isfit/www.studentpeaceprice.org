<%= content_for :meta do %>
    <meta property="og:type" content="website">
    <meta property="og:image" content="http://www.studentpeaceprize.org/assets/logo-fredspris.png">
    <meta property="og:url" content="http://www.studentpeaceprize.org/">
    <meta property="og:title" content="The Student Peace Prize">
    <meta property="og:site_name" content="Student Peace Prize"/>
    <meta property="fb:app_id" content="132392463483362"/>
    <meta property="og:description" content="The Student Peace Prize is given out every other year on behalf of all students in Norway.">
<% end %>

<div class="carousel" id="featured-news">
  <div class="carousel-inner">
    <% @articles.each do |article| %>
      <% first = article == @articles.first %>
      <%= render article, first: first %>
    <% end %>
  </div>
  <a class="carousel-control left" href="#featured-news" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#featured-news" data-slide="next">&rsaquo;</a>
</div>
<div class="articles row">
  <div class="span4">
  <h1><%= link_to t('.about_prize_title'), page_path(16, tab: "about") %></h1>
    <p><%= t('.about_prize_paragraph') %></p>
  </div>
  <div class="span4">
    <h1><%= link_to t('.nominate_title'), article_path(7, tab: "about") %></h1>
    <p><%= t('.nominate_paragraph_one') %></p>
    <p><%= raw t('.nominate_paragraph_two') %> <%= mail_to "nominations@studentpeaceprize.org" %></p>
  </div>
</div>
<div class="pages row">
  <div class="span8">
    <hr>
    <h1><%= link_to t('.global_truce_title'), article_path(9) %></h1>
    <p><%= raw t('.global_truce_paragraph') %></p>
    <%= youtube_movie "04SEzifEsGg", "klasse" %>
  </div>
</div>

<div class="pages row">
  <div class="span8">
    <hr>
    <% page = Page.find(20) %>
    <h1><%= link_to page.title_en, page_path(page) %></h1>
    <p><em><%= page.ingress_en %></em></p>
    <p><%=raw format page.body_en %></p>
  </div>
</div>

