<% 
  sublinks = tab.sublinks.where(deleted:0)
  count = sublinks.count
%>

<% if count > 1 %>
<li class="dropdown">
<%= tab_dropdown_link_to(tab) %>
  <ul class="dropdown-menu">
    <% sublinks.each do |sublink| %>
      <li>
      <%= sublink_to(sublink) %> 
      </li>
    <% end %>
  </ul>
  </li>
</li>
<% elsif count == 1 %>
  <li>
  <%= tab_link_to(tab, sublinks.first) %>
  </li>
<% else %>
  <li>
  <%= raw link_to use_english? ? tab.name_en.html_safe : tab.name_no.html_safe, root_path %>
  </li>
<% end %>
