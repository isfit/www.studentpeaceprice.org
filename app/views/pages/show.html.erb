<div class="content">
  <%if @picture%>
    <div style="float:right; margin-left:20px; margin-top:20px; margin-bottom: 10px;  text-align:center">
      <%= image_tag @picture_path %><br />
      <%= @page.image_text %>
    </div>
  <% end %>
  <span class="otherart">
    <h1><%=@page.title_en%></h1>
    <h2><%=@page.ingress_en%></h2>
    <%=raw format(@page.body_en)%>
    <% unless @page.byline.blank? %>
      <p>
      <%=raw @page.byline%>
      <br>
      <%=  @page.created_at.strftime("%F")%>
      </p>
    <%end%>
  </span>
</div>
