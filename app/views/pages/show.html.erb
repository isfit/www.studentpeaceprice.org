<%content_for :head do %>
  <meta property="og:title" content="<%=@page.title_en%>."/>
  <meta property="og:type" content="non_profit"/>
  <% if @picture %>
    <meta property="og:image" content="<%="http://www.studentpeaceprize.org/#{@picture_path}"%>"/>
  <% end %>
  <meta property="og:url" content="<%=(request.url).match(/([A-Za-z0-9:._\/]+)/)[1]%>"/>          
  <meta property="og:site_name" content="Student Peace Prize"/>
  <meta property="fb:app_id" content="132392463483362"/>
  <meta property="og:description" content="<%=@page.ingress_en%>"/>
<%end%>
<%= content_for :styles do %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=PT+Sans:700|PT+Serif:400,700,400italic" %>
<% end %>

  <%if @picture%>
    <div id="article-media">
      <%= image_tag @picture_path %>
    </div>
  <% end %>
  <div id="article-header">
    <h1><%=@page.title_en%></h1>
    <div class="fb-like pull-right" data-href="<%= request.url %>" data-send="false" data-layout="box_count" data-width="45" data-show-faces="false"></div>
    <p><%= raw format @page.ingress_en%></p>
  </div>
    <div id="article-metadata">
  <span class="byline">
    <% if @picture %>
      <em>Photo:</em> <%= @page.image_text %>
    <% end %>
    <em>Created:</em> <%= @page.created_at.strftime("%F") %>
    <em>Last Updated:</em> <%= @page.updated_at.strftime("%F") %>
  </span>
</div>
<div id="article-body">
    <%=raw format(@page.body_en)%>
  </div>
