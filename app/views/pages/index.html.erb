<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title en</th>
    <th>Ingress en</th>
    <th>Body en</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.title_en %></td>
    <td><%=h page.ingress_en %></td>
    <td><%=h page.body_en %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

