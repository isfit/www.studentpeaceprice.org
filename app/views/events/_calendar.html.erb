<%=@dates%>
<%#= stylesheet_link_tag "calendar" %>
		<%
		#year= @year
		#month = @month
    year = nil
    month = nil
    nextyear = nil
    nextmonth = nil
    prevyear = nil

    day = Time.now.day
    today = Time.now
   nextyear = nil
   nextmonth = nil
   prevyear = nil
   if params[:day]
    day = params[:day].to_i
   end
   if params[:month] && params[:year]
      month = params[:month].to_i
      year = params[:year].to_i
    else 
			month = (Time.now).month
	    year = (Time.now).year
    end
    if month == 12
      prevmonth = 11
      nextmonth = 1
      prevyear = year
      nextyear = year+1
    elsif month == 1
      prevmonth = 12
      nextmonth = 2
      prevyear = year-1
      nextyear = year
    else
      prevmonth = month-1
      nextmonth = month+1
      nextyear = year
      prevyear = year
    end
	  if month < 10
      events = EventDate.joins(:event).find(:all, :conditions => "event_dates.date LIKE '"+year.to_s+"-0"+month.to_s+"%' AND events.deleted <> 1 AND events.spp = 1")
    elsif
      events = EventDate.joins(:event).find(:all, :conditions => "event_dates.date LIKE '"+year.to_s+"-"+month.to_s+"%' AND events.deleted <> 1 AND events.spp = 1")
    end

                dates = Array.new(31)
                for e in events do
                        dates[e.date.day] = 1
                end
		#days and weeks vars now ...
		running_day = ((Date.new(year, 12, 1) << (12-month)).wday)
		if running_day == 0
			running_day = 6
		else
			running_day -= 1
		end
		rows = 0
			
		days_in_month =  (Date.new(year, 12, 31) << (12-month)).day
		days_in_this_week = 1
		day_counter = 0
		%>
		<!--draw table-->
		<table cellpadding="0" cellspacing="0" class="calendar">
		<!--table headings-->
		<% headings = ['Ma','Ti','On','To','Fr']
			headingsw = ['L&oslash','S&oslash'] %>
		<tr class="calendar-row-head">
			<td class="calendar-day-head">Ma</td>
			<td class="calendar-day-head">Ti</td>
			<td class="calendar-day-head">On</td>
			<td class="calendar-day-head">To</td>
			<td class="calendar-day-head">Fr</td>
			<td class="calendar-day-headw">L&oslash;</td>
			<td class="calendar-day-headw">S&oslash;</td>
		</tr>
		<!--row for week one-->
		<tr class="calendar-row">
		<%
			#print "blank" days until the first of the current week
			for x in 0..(running_day -1)do %>
				<td class="calendar-day-np">&nbsp;</td>
			<%	days_in_this_week+=1
			end
			#keep going with days....
      for list_day in (1..days_in_month) do %>
				<td class="calendar-day">
          <%if list_day == today.day.to_i && month == today.month.to_i && year == today.year.to_i %>
            <span class="calendar-day-today" style="border: #000 1px solid">
						  <%= link_to list_day.to_s, url_for(:controller=>"events", :year=> year.to_s, :month=> month.to_s, :day=> list_day.to_s) %></td>
            </span> 
          <%elsif dates[list_day] == 1%>
					  <%= link_to list_day.to_s, url_for(:controller=>"events", :year=> year.to_s, :month=> month.to_s, :day=> list_day.to_s), :style=>"text-decoration: underline" %></td>
					<%else%>
            <div style="color:#000">
            <%=list_day.to_s%>
            </div>
          <% end %>
        </td>
				<% if running_day == 6 %>
					</tr>
					<% if (day_counter) != days_in_month %>
						<tr class="calendar-row">
						
					<% 
						rows += 1
					end
					running_day = -1
					days_in_this_week = 0
				end
				days_in_this_week+=1
				running_day+=1
				day_counter+=1
			end 
		
			#finish the rest of the days in the week
			if days_in_this_week < 8
				for x in (1..(8 - days_in_this_week)) do %>
					<td class="calendar-day-np">&nbsp;</td>
				<% end
			end 
		%>
		<tr class="calendar-row"><td style="color:#EAAE0D;text-transform:lowercase;" colspan=7>
        [<%= link_to Date::ABBR_MONTHNAMES[prevmonth], url_for(:id => nil, :action=>:index, :year=>prevyear, :month=>prevmonth), :style=>"font-size:90%;color:#EAAE0D;text-transform:lowercase;" %>]
        [<%= Date::MONTHNAMES[month] %>]
        [<%= link_to Date::ABBR_MONTHNAMES[nextmonth], url_for(:id => nil, :action=>:index, :year=>nextyear, :month=>nextmonth), :style=>"font-size:90%;color:#EAAE0D;text-transform:lowercase;" %>]
    </td></tr>

		<!--final row -->
		</tr>
		<!--end the table-->
		</table>
		<br />
    <%    now = Time.now.strftime("%Y-%m-%d %H:%M:%S")
    @upcoming_events = Event.joins(:event_dates).where("event_dates.date > '"+now+"' AND events.deleted <> 1 AND events.spp = 1").order("event_dates.date").limit(5)%>
		<%if @upcoming_events.size > 0 %>
			<table border="0" cellspacing="0" cellpadding="0", style="margin-top:0px; margin-left:10px;">
				<tr>
					<td colspan="2" valign="top">
						<span style="font-weight:bold;padding-top:-3px;">Upcoming events</span>
					<td>
			<%for event in @upcoming_events %>
			  <%unless event.spec_place.blank?%>				
        <tr>
					<td width = "110">
              <%unless event.event_place_id.blank?%><%=event.event_place.title%>, <%end%><%=event.spec_place%>
          </td> 
          <td><%=event.event_dates.first.date.strftime("%d %b")%></td>
        </tr>
          <td colspan=2><%= link_to truncate(event.title, :length => 25, :omission => "..."), :controller => "events", :action => "show",:id => event.id%></td>
        </tr>
        <%else%>
				<tr>
          <td width = "110">
            <%= link_to truncate(event.title, :length => 18, :omission => "..."), :controller => "events", :action => "show",:id => event.id%>
          </td>
					<td><%=event.event_dates.first.date.strftime("%d %b")%></td>
				</tr>
        <%end%>
			<%end%>
			</table>
		<%end%>

